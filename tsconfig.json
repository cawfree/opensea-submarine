{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "noEmitOnError": true,
    "noEmit": true
  },
  "exclude": ["scripts/start.ts"]
}
